{
    "checks": {
        "HADashboard": {
            "type": "metric",
            "command": "check-ports.rb -h {{appdaemon_bind_ip}} -p {{appdaemon_port}} -t 3",
            "subscribers": ["casa"],
            "handlers": ["homeassistant-sensor"],
            "interval": {{sensu_default_check_interval}},
            "aggregate": "homeassistant",
            "homeassistant": {
                "sensor_type": "binary"
            }
        }
    }
}