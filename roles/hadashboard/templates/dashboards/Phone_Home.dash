title: Home
widget_dimensions: [117, 117]
widget_margins: [5, 5]
columns: 3

joris_presence:
    widget_type: device_tracker
    title: Joris
    device: jorissiphone
    icon_on: fa-male
    icon_off: fa-male

ilse_presence:
    widget_type: device_tracker
    title: Ilse
    device: iphonevanilse
    icon_on: fa-female
    icon_off: fa-female

watch_tv:
    widget_type: scene
    title: TV kijken
    entity: scene.tv_kijken
    icon_on: mdi-television-classic
    icon_off: mdi-television-classic

reading:
    widget_type: scene
    title: Lezen in de zetel
    entity: scene.tv_lezen
    icon_on: mdi-book-open-page-variant
    icon_off: mdi-book-open-page-variant

sleep:
    widget_type: scene
    title: Slaapwel
    entity: scene.slaapwel
    icon_on: mdi-sleep
    icon_off: mdi-sleep

leave:
    widget_type: scene
    title: Vertrekken
    entity: scene.leave
    icon_on: mdi-logout
    icon_off: mdi-logout

cooking:
    widget_type: scene
    title: Koken
    entity: scene.koken
    icon_on: mdi-pot-mix
    icon_off: mdi-pot-mix

weekend_breakfast:
    widget_type: scene
    title: Weekend Ontbijt
    entity: scene.weekend_breakfast
    icon_on: mdi-food-croissant
    icon_off: mdi-food-croissant

coming_home:
    widget_type: scene
    title: Coming Home
    entity: scene.coming_home
    icon_on: fa-sign-in
    icon_off: fa-sign-in

start_work_day:
    widget_type: scene
    title: Start Work Day
    entity: scene.start_work_day
    icon_on: fa-briefcase
    icon_off: fa-briefcase

good_morning:
    widget_type: scene
    title: Good Morning
    entity: scene.good_morning
    icon_on: mdi-weather-sunset-up
    icon_off: mdi-weather-sunset-up

clock:
    widget_type: clock
    date_style: "font-size: 150%"
    time_style: "font-size: 500%"

# Note: every row needs to be present in the layout, even if empty
layout:
    - good_morning(1x1), start_work_day(1x1), coming_home(1x1)
    - sleep(1x1), leave (1x1), cooking(1x1)
    - joris_presence(1x1), ilse_presence(1x1)
    - watch_tv(1x1), reading(1x1), weekend_breakfast(1x1)
    - include: Phone_navigation_panel
    
